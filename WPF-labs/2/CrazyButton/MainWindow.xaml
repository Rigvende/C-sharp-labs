<Window x:Class="CrazyButton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mad Button" Height="450" Width="800">
    <Canvas MouseDown="ButtonYes_MouseDown" Background="Lavender">
        <TextBlock x:Name="textBlock"  FontSize="25" FontFamily="Book Antiqua" 
                   TextAlignment="Center" HorizontalAlignment="Center" Width="350" Canvas.Left="213" Canvas.Top="87">Вы довольны своей работой?</TextBlock>
        <Button x:Name="yes" FontWeight="Bold" FontSize ="28" Height="50" Width="100" Background="LightSteelBlue"
                Canvas.Left="284" Canvas.Top="145" Click="ButtonYes_Click">ДА</Button>
        <Button x:Name="no" Content="НЕТ" Height="40" Width="60" Canvas.Left="447" Canvas.Top="151"  FontWeight="Bold" FontSize ="16" Background="LightCoral" 
                MouseMove="ButtonNo_MouseMove" Click="ButtonNo_Click"/>
    </Canvas>
</Window>
